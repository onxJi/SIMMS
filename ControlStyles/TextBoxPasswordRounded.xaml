<UserControl x:Class="SIMMS.ControlStyles.TextBoxPasswordRounded"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMMS.ControlStyles"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800">
    <Border Width="250" CornerRadius="10"
            Background="Silver"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <PasswordBox Name="tb_password"
                Height="30"
                Width="235"
                FontSize="14"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                BorderBrush="Transparent"
               
                HorizontalAlignment="Center"
                Opacity="0.80"
                VerticalAlignment="Center">

            <PasswordBox.Background>
                <ImageBrush ImageSource="/SIMMS;component/Images/password_icon.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
            </PasswordBox.Background>


        </PasswordBox>
    </Border>
</UserControl>
